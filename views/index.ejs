<%- include('layout/header')  %>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
                <div class="alert alert-success alert-dismissible fade show alert-<%= message.type  %>" role="alert">
                    <button type="button" class="btn-close" data-dismiss="alert" aria-label="Close"></button>
                    <strong><%= message.message  %></strong> 
                </div>
            <% } %>
            <div class="table-responsive align-middle">
                <% if (users!='') { %>
                    <table class="table table-striped text-center my-3 align-middle text-center">
                        <thead>
                            <tr class="table-dark ">
                                <th>Sr.No</th>
                                <th>Image</th>
                                <th>ID.No</th>
                                <th>Name</th>
                                <th>E-mail</th>
                                <th>Phone</th>
                                <th>WhatsApp</th>
                                <th>Designation</th>
                                
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach((row, index) => { %>
                                <tr class="align-middle text-center ">
                                    <td><%= index %></td>
                                    <td>
                                        <% if (row.image) { %>
                                            <img src="/images/<%= row.image %>" width="50" class="img-thumbnail">
                                        <% } else { %>
                                            <span>No Image</span>
                                        <% } %>
                                     <td><%= row.id_no  %></td>
                                    <td><%= row.name %></td>
                                    <td><%= row.email %></td>
                                    <td><%=row.phone_country_code + row.phone %></td>
                                    <td><%= row.whatsapp  %></td>
                                    <td><%= row.designation %></td>
                                    
                                    <!-- Display barcode image -->
                                    
                                    <td>
                                        <a href="/edit/<%=row.id  %>" class="text-success"><i class="fa-solid fa-pen-to-square mx-1"></i></a>
                                        <a href="/delete/<%=row.id  %>" class="text-danger"><i class="fa-solid fa-trash mx-1"></i></a>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No Users found in the Database</h1>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer')  %>
